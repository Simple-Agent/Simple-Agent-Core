# SimpleAGI Environment Variables
# Rename this file to .env and add your OpenAI API key

# Your OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Set this to use a local model instead of OpenAI's API
# Example for LM Studio: http://192.168.0.104:1234/v1
# API_BASE_URL=http://localhost:1234/v1
# If using LM-Studio, or hosting your own LLM on the local network, increase the context length beyond 10k

# Your GitHub token
GITHUB_TOKEN=your_github_token_here

# Your Discord token
DISCORD_TOKEN=your_discord_token_here

# Model settings
DEFAULT_MODEL=gpt-4-turbo
SUMMARIZER_MODEL=gpt-3.5-turbo
# Temperature (0.0-1.0): lower for more deterministic, higher for more creative responses
MODEL_TEMPERATURE=0.2
SUMMARIZER_TEMPERATURE=0.2

# Memory settings
MEMORY_FILE=memory.json

# Application settings
MAX_STEPS=10
DEBUG_MODE=False 